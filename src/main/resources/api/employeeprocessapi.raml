#%RAML 1.0
title: EmployeeProcessAPI
types:
  Employee: !include EmployeeCrudDataType.raml

/employees:
  get:
    responses:
      200:
        body:
          application/json:
            type: Employee[]
            examples:
              output: !include Employees.raml

  post:
    body:
      application/json:
        type: Employee
        examples:
          input: !include Employee.raml

    responses:
      201:
        body:
          application/json:
            example:
              message: Employee added successfully.
  /{ID}:
    get:
      responses:
        200:
          body:
            application/json:
              type: Employee
              examples:
                output: !include Employee.raml
    
    put:
      responses:
        200:
          body:
            application/json:
              type: Employee
              examples:
                output: !include Employee.raml
    
    delete:
      responses:
        200:
          body:
            application/json:
              examples:
                message: Employee deleted successfully

  /filterByDate:
    get:
      queryParameters:
        startdate:
          displayName: Start Date
          type: string
          description: Join Start Date
          example: 2020-10-04
          required: false

        enddate:
          displayName: End Date
          type: string  
          description: Join End Date
          example: 2020-10-05
          required: false

      responses:
       200:
        body:
          application/json:
            type: Employee[]
            examples:
              output: !include Employees.raml                